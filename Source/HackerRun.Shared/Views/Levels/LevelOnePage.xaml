<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="HackerRun.Shared.Views.Levels.LevelOnePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    IsVisible="{Binding IsLevelOneVisible}">
    <StackLayout Spacing="0">
        <Label
            FontAttributes="Bold"
            FontFamily="{StaticResource HeaderFont}"
            FontSize="30"
            HorizontalTextAlignment="Center"
            Text="Level 1"
            VerticalTextAlignment="Center" />


        <!--  Level 1 content here  -->



        <Button
            Command="{Binding NavigateToLevelTwoCommand}"
            CornerRadius="0"
            HeightRequest="80"
            Style="{StaticResource Btn-Secondary}"
            Text="NEXT"
            VerticalOptions="EndAndExpand" />
    </StackLayout>
</ContentView>